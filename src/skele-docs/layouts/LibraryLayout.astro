---
import { z } from "zod/v4";
import "../../styles/skele.pcss";
import "../styles/skele-docs.pcss";

const libraryLayoutSchema = z.object({
  frontmatter: z
    .object({
      title: z.string().optional(),
      content_blocks: z.array(z.any()).optional(),
    })
    .optional(),
});

import Section from "../../components/layouts/section/section.astro";
import NavLayout from "./NavLayout.astro";
const props = libraryLayoutSchema.parse(Astro.props);
const pageTitle = props.frontmatter?.title || "Skele Library";
---

<!doctype html>
<html lang="en" data-theme="default">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body class="animations-disabled">
    <Section
      maxContentWidth="2xl"
      paddingHorizontal="md"
      paddingVertical="sm"
      class="library-section"
    >
      <NavLayout />
      <main>
        <slot />
      </main>
    </Section>
    <script>
      setTimeout(() => {
        document.body.classList.remove("animations-disabled");
      }, 1000);
    </script>
  </body>
</html>
