---
import clsx from "clsx";
import MarkdownIt from "markdown-it";

const {
  quote,
  authorName,
  authorDescription,
  horizontalAlignment = "center",
  class: className,
  ...restProps
} = Astro.props;

const htmlAttributes = Object.fromEntries(
  Object.entries(restProps).filter(([key]) => !key.startsWith("_"))
);

const md = MarkdownIt({ html: true });
const MarkdownText = quote ? md.renderInline(quote) : "";

const classNames = clsx("testimonial", `alignment-${horizontalAlignment}`, className);
---

<blockquote class:list={classNames} {...htmlAttributes}>
  <q class="quote" set:html={MarkdownText} />
  <cite class="author">
    <strong class="name">
      {authorName}
    </strong>
    {authorDescription && <span class="description">- {authorDescription}</span>}
  </cite>
</blockquote>

<style>
  .testimonial {
    display: flex;
    flex-direction: column;
    gap: var(--space-em-sm);
    margin: 0;

    &.alignment-end {
      align-items: end;
      justify-content: end;
    }
    &.alignment-center {
      align-items: center;
      justify-content: center;
    }
    > .quote {
      margin: 0;
      font-size: var(--font-size-xl);

      &::before {
        content: "“";
      }

      &::after {
        content: "”";
      }
    }

    > .author {
      font-style: normal;
    }
  }
</style>
