---
import { z } from "zod/v4";
import "@styles/style.pcss";
import "@component-library/styles/component-library.pcss";

const libraryLayoutSchema = z.object({
  frontmatter: z
    .object({
      title: z.string().optional(),
      contentBlocks: z.array(z.any()).optional(),
    })
    .optional(),
});

import Container from "@components/wrappers/container/container.astro";
import SidebarNavLayout from "@component-library/layouts/SidebarNavLayout.astro";
import MobileNavLayout from "@component-library/layouts/MobileNavLayout.astro";
const props = libraryLayoutSchema.parse(Astro.props);
const pageTitle = props.frontmatter?.title || "Component Library";
---

<!doctype html>
<html lang="en" data-theme="default">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <slot name="head" />
  </head>
  <body class="animations-disabled component-library">
    <MobileNavLayout />
    <Container
      maxContentWidth="2xl"
      paddingHorizontal="md"
      paddingVertical="none"
      class="library-container"
    >
      <SidebarNavLayout />
      <main class="main">
        <slot />
      </main>
    </Container>
    <script>
      setTimeout(() => {
        document.body.classList.remove("animations-disabled");
      }, 1000);
    </script>
  </body>
</html>
