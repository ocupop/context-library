.grid {
  gap: var(--grid-spacing, --spacing-md);
  width: 100%;

  &.layout-start-aligned {
    align-items: stretch;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(var(--min-item-width), 100%), 1fr));
    justify-content: start;

    > .grid-item > editable-array > editable-array-item:only-child > *,
    > .grid-item > :not(editable-array):only-child {
      height: 100%;
    }
  }

  &.layout-center-aligned {
    align-items: stretch;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

    > .grid-item {
      flex: 1 1 min(var(--min-item-width), 100%);
      max-width: var(--max-item-width);

      > editable-array > editable-array-item:only-child > *,
      > :not(editable-array):only-child {
        height: 100%;
      }
    }
  }

  &.layout-uneven-columns {
    align-items: center;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;

    > .grid-item {
      flex: 0 0 auto;
      max-width: var(--max-item-width);
      min-width: min(var(--min-item-width), 100%);
    }
  }
}
