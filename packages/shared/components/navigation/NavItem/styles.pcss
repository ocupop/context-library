.nav-item {
  position: relative;

  a[aria-current="page"] {
    text-decoration: underline dotted;
    text-decoration-color: var(--nav-sidebar-active-textDecorationColor);
    text-underline-offset: 3px;
  }
}

.nav-item > a {
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: var(--space-xs);
}

.nav-item-toggle {
  display: none;
}

.nav-item-trigger {
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: var(--space-xs);
}
